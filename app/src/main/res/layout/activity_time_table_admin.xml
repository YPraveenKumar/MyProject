<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPage.TimeTableAdmin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvViewTimeTAble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:background="@color/light_blue"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:onClick="viewTimeTable"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:id="@+id/spnStandard"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:background="@color/light_pink_Byjus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />

        <Spinner
            android:id="@+id/spnDay"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:background="@color/lightRed"
            android:layout_marginTop="20dp"
            android:layout_below="@id/spnStandard"
            />

        <EditText
            android:id="@+id/etMDFirst"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:hint="@string/first_hour"
            android:layout_below="@id/spnDay"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/etMDSecond"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@id/etMDFirst"
            android:hint="Second Hour"
            android:textSize="16sp"
            />
    <EditText
        android:id="@+id/etMDThird"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="Third Hour"
        android:layout_below="@id/etMDSecond"
        android:textSize="16sp"
        />
    <EditText
        android:id="@+id/etMDFourth"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="Fourth Hour"
        android:layout_below="@id/etMDThird"
        android:textSize="16sp"
        />
    <EditText
        android:id="@+id/etMDFifth"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/etMDFourth"
        android:hint="Fifth Hour"
        android:textSize="16sp"
        />
    <EditText
        android:id="@+id/etMDSixth"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/etMDFifth"
        android:hint="Sixth Hour"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/etMDSeventh"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/etMDSixth"
        android:hint="Seventh Hour"
        android:textSize="16sp"
        />
    <EditText
        android:id="@+id/etMDEighth"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/etMDSeventh"
        android:hint="Eighth Hour"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/btnAdminTimeTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etMDEighth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/save"
        android:textStyle="bold"
        android:background="@color/light_green"
        />

    </RelativeLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Alice_blue"
    tools:context=".Dashboard.DashBoardHome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cvStuProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            tools:src="@color/light_yellow"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            />

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="camera"
            android:textStyle="bold"
            android:layout_toRightOf="@id/cvStuProfile"
            android:layout_marginLeft="20dp"
            android:background="@color/light_green"
            android:layout_toEndOf="@id/cvStuProfile"
            android:layout_marginStart="20dp" />
        <Button
            android:id="@+id/btnGallery"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Gallery"
            android:textStyle="bold"
            android:layout_toRightOf="@id/cvStuProfile"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/btnCamera"
            android:layout_marginTop="10dp"
            android:background="@color/light_green"
            android:layout_toEndOf="@id/cvStuProfile"
            android:layout_marginStart="20dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDAshboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_below="@id/cvStuProfile"
            />

    </RelativeLayout>

</FrameLayout>